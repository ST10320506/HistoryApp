<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Score">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imgBackgroundFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/mapbackground" />

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="331dp"
            android:layout_height="76dp"
            android:layout_marginTop="52dp"
            android:background="#F5F7FA"
            android:fontFamily="@font/archivo_medium"
            android:text="Score"
            android:textAlignment="center"
            android:textColor="#99662F"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMessage" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="137dp"
            android:layout_height="60dp"
            android:layout_marginTop="48dp"
            android:backgroundTint="#99662F"
            android:text="Exit"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvScoreDescription" />

        <Button
            android:id="@+id/btnReviewAnswers"
            android:layout_width="205dp"
            android:layout_height="67dp"
            android:layout_marginTop="48dp"
            android:backgroundTint="#99662F"
            android:text="Review Answers"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnExit" />

        <TextView
            android:id="@+id/tvScoreDescription"
            android:layout_width="357dp"
            android:layout_height="132dp"
            android:layout_marginTop="36dp"
            android:background="#FAF0E4"
            android:text="If you would like to exit the app, click the 'Exit' button. If you wish to review the questions and the correct answers, click 'Review Answers' to be directed to the Review page."
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvScore" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="353dp"
            android:layout_height="99dp"
            android:layout_marginTop="52dp"
            android:background="#F5F7FA"
            android:fontFamily="@font/archivo_medium"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#99662F"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>